@model TeamProject.Models.Contact

@{
    ViewBag.Title = "Delete";
}

<h1>Delete Contact</h1>

<p>Do you really want to delete <strong>@Model.FirstName @Model.LastName</strong>?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ContactId" />
    <button type="submit" class="btn btn-danger">Yes</button>
    <a asp-action="Details" asp-route-id="@Model.ContactId" class="btn btn-secondary">No</a>
</form>