@model TeamProject.Models.Contact

@{
    ViewBag.Title = "Details";
}

<h1>Contact Details</h1>

<div>
    <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Category:</strong> @Model.Category?.Name</p>
    <p><strong>Organization:</strong> @Model.Organization</p>
    <p><strong>Date added:</strong> @Model.DateAdded.ToString("MM/dd/yyyy hh:mm tt")</p>
</div>

<div>
    <a asp-controller="Contact" asp-action="Edit" asp-route-id="@Model.ContactId" class="btn btn-primary">Edit</a>
    <a asp-controller="Contact" asp-action="Delete" asp-route-id="@Model.ContactId" class="btn btn-danger">Delete</a>
    <a asp-controller="Contact" asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>