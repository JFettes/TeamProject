@model List<Movie>
@{
    ViewBag.Title = "Contact Manager";
}

<a asp-controller="Manager" asp-action="Add">Add Contact</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var manager in Model)
        {
            <tr>
                <td>@manager.FirstName</td>
                <td>@manager.LastName</td>
                <td>@manager.Phone</td>
                <td>@manager.Email</td>
                <td>@manager.Category.Name</td>
                <td>
                    <a asp-controller="Manager" asp-action="Edit"
                       asp-route-id="@manager.ManagerId"
                       asp-route-slug="@manager.Slug">Edit</a>
                    <a asp-controller="Manager" asp-action="Delete"
                       asp-route-id="@manager.ManagerId"
                       asp-route-slug="@manager.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>